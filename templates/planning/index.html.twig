{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('css/planning.css') }}">
{% endblock %}

{% block js %}
    <script src="{{ asset('js/planning.js') }}"></script>
{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Toolbar -->
    <div class="saas-toolbar">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="saas-btn saas-btn-icon">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                </button>
                <h2 class="saas-month">Novembre 2025</h2>
                <button class="saas-btn saas-btn-icon">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </button>
            </div>
            <button class="saas-btn saas-btn-primary" data-bs-toggle="modal" data-bs-target="#eventModal">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Nouvel événement
            </button>
        </div>
    </div>

    <!-- Calendrier Card -->
    <div class="saas-card">
        <div class="table-responsive">
            <table class="saas-calendar">
                <thead>
                    <tr>
                        <th><span>Lun</span></th>
                        <th><span>Mar</span></th>
                        <th><span>Mer</span></th>
                        <th><span>Jeu</span></th>
                        <th><span>Ven</span></th>
                        <th><span>Sam</span></th>
                        <th><span>Dim</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="saas-day other-month">27</td>
                        <td class="saas-day other-month">28</td>
                        <td class="saas-day other-month">29</td>
                        <td class="saas-day other-month">30</td>
                        <td class="saas-day other-month">31</td>
                        <td class="saas-day">1</td>
                        <td class="saas-day">2</td>
                    </tr>
                    <tr>
                        <td class="saas-day today">3</td>
                        <td class="saas-day">4</td>
                        <td class="saas-day">5</td>
                        <td class="saas-day">6</td>
                        <td class="saas-day">7</td>
                        <td class="saas-day">8</td>
                        <td class="saas-day">9</td>
                    </tr>
                    <tr>
                        <td class="saas-day">10</td>
                        <td class="saas-day">11</td>
                        <td class="saas-day">12</td>
                        <td class="saas-day">13</td>
                        <td class="saas-day">14</td>
                        <td class="saas-day">15</td>
                        <td class="saas-day">16</td>
                    </tr>
                    <tr>
                        <td class="saas-day">17</td>
                        <td class="saas-day">18</td>
                        <td class="saas-day">19</td>
                        <td class="saas-day">20</td>
                        <td class="saas-day">21</td>
                        <td class="saas-day">22</td>
                        <td class="saas-day">23</td>
                    </tr>
                    <tr>
                        <td class="saas-day">24</td>
                        <td class="saas-day">25</td>
                        <td class="saas-day">26</td>
                        <td class="saas-day">27</td>
                        <td class="saas-day">28</td>
                        <td class="saas-day">29</td>
                        <td class="saas-day">30</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Légende -->
        <div class="saas-legend">
            <div class="legend-item">
                <span class="legend-dot today-dot"></span>
                <span class="legend-text">Aujourd'hui</span>
            </div>
            <div class="legend-item">
                <span class="legend-dot event-dot"></span>
                <span class="legend-text">Événement</span>
            </div>
        </div>
    </div>
</div>

<!-- Modale d'ajout d'événement -->
<div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background: var(--saas-surface); border: 1px solid var(--saas-border); border-radius: 1.25rem; color: var(--saas-text);">
            <div class="modal-header" style="border-bottom: 1px solid var(--saas-border);">
                <h5 class="modal-title" id="eventModalLabel" style="font-weight: 700; background: linear-gradient(135deg, var(--saas-primary), var(--saas-secondary)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="d-inline-block me-2">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    Nouvel événement
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="filter: invert(1);"></button>
            </div>
            <form id="eventForm">
                <div class="modal-body" style="padding: 2rem;">
                    <div class="mb-3">
                        <label for="eventTitle" class="form-label" style="color: var(--saas-text); font-weight: 600;">Titre de l'événement</label>
                        <input type="text" class="form-control" style="background: var(--saas-bg); border: 2px solid var(--saas-border); border-radius: 0.75rem; color: var(--saas-text); padding: 0.75rem 1rem;" id="eventTitle" placeholder="Ex: Réunion mensuelle" required>
                    </div>

                    <div class="mb-3">
                        <label for="eventStartDateTime" class="form-label" style="color: var(--saas-text); font-weight: 600;">Date/Heure de début</label>
                        <input type="datetime-local" class="form-control" style="background: var(--saas-bg); border: 2px solid var(--saas-border); border-radius: 0.75rem; color: var(--saas-text); padding: 0.75rem 1rem;" id="eventStartDateTime" required>
                    </div>

                    <div class="mb-3">
                        <label for="eventEndDateTime" class="form-label" style="color: var(--saas-text); font-weight: 600;">Date/Heure de fin</label>
                        <input type="datetime-local" class="form-control" style="background: var(--saas-bg); border: 2px solid var(--saas-border); border-radius: 0.75rem; color: var(--saas-text); padding: 0.75rem 1rem;" id="eventEndDateTime" required>
                    </div>

                    <div class="mb-3">
                        <label for="eventDescription" class="form-label" style="color: var(--saas-text); font-weight: 600;">Description</label>
                        <textarea class="form-control" id="eventDescription" style="background: var(--saas-bg); border: 2px solid var(--saas-border); border-radius: 0.75rem; color: var(--saas-text); padding: 0.75rem 1rem;" rows="3" placeholder="Ajouter une description..."></textarea>
                    </div>
                </div>
                <div class="modal-footer" style="border-top: 1px solid var(--saas-border);">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="background: var(--saas-bg); border: 2px solid var(--saas-border); color: var(--saas-text); padding: 0.625rem 1.25rem; border-radius: 0.75rem; font-weight: 600;">Annuler</button>
                    <button type="submit" class="saas-btn saas-btn-primary">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Créer l'événement
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modale de modification d'événement -->
<div class="modal fade" id="editEventModal" tabindex="-1" aria-labelledby="editEventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background: var(--saas-surface); border: 1px solid var(--saas-border); border-radius: 1.25rem; color: var(--saas-text);">
            <div class="modal-header" style="border-bottom: 1px solid var(--saas-border);">
                <h5 class="modal-title" id="editEventModalLabel" style="font-weight: 700; background: linear-gradient(135deg, var(--saas-primary), var(--saas-secondary)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="d-inline-block me-2">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    Modifier l'événement
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="filter: invert(1);"></button>
            </div>
            <form id="editEventForm">
                <input type="hidden" id="editEventId">
                <div class="modal-body" style="padding: 2rem;">
                    <div class="mb-3">
                        <label for="editEventTitle" class="form-label" style="color: var(--saas-text); font-weight: 600;">Titre de l'événement</label>
                        <input type="text" class="form-control" id="editEventTitle" placeholder="Ex: Réunion mensuelle" required style="background: var(--saas-bg); border: 2px solid var(--saas-border); border-radius: 0.75rem; color: var(--saas-text); padding: 0.75rem 1rem;">
                    </div>

                    <div class="mb-3">
                        <label for="editEventStartDateTime" class="form-label" style="color: var(--saas-text); font-weight: 600;">Date/Heure de début</label>
                        <input type="datetime-local" class="form-control" id="editEventStartDateTime" required style="background: var(--saas-bg); border: 2px solid var(--saas-border); border-radius: 0.75rem; color: var(--saas-text); padding: 0.75rem 1rem;">
                    </div>

                    <div class="mb-3">
                        <label for="editEventEndDateTime" class="form-label" style="color: var(--saas-text); font-weight: 600;">Date/Heure de fin</label>
                        <input type="datetime-local" class="form-control" id="editEventEndDateTime" required style="background: var(--saas-bg); border: 2px solid var(--saas-border); border-radius: 0.75rem; color: var(--saas-text); padding: 0.75rem 1rem;">
                    </div>

                    <div class="mb-3">
                        <label for="editEventDescription" class="form-label" style="color: var(--saas-text); font-weight: 600;">Description</label>
                        <textarea class="form-control" id="editEventDescription" rows="3" placeholder="Ajouter une description..." style="background: var(--saas-bg); border: 2px solid var(--saas-border); border-radius: 0.75rem; color: var(--saas-text); padding: 0.75rem 1rem;"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="editEventColor" class="form-label" style="color: var(--saas-text); font-weight: 600;">Couleur</label>
                        <div class="d-flex gap-2 flex-wrap">
                            <input type="radio" class="btn-check" name="editEventColor" id="editColor1" value="#8B5CF6">
                            <label class="btn" for="editColor1" style="width: 40px; height: 40px; background: #8B5CF6; border-radius: 0.5rem; cursor: pointer; border: 2px solid var(--saas-border);"></label>

                            <input type="radio" class="btn-check" name="editEventColor" id="editColor2" value="#EC4899">
                            <label class="btn" for="editColor2" style="width: 40px; height: 40px; background: #EC4899; border-radius: 0.5rem; cursor: pointer; border: 2px solid var(--saas-border);"></label>

                            <input type="radio" class="btn-check" name="editEventColor" id="editColor3" value="#F59E0B">
                            <label class="btn" for="editColor3" style="width: 40px; height: 40px; background: #F59E0B; border-radius: 0.5rem; cursor: pointer; border: 2px solid var(--saas-border);"></label>

                            <input type="radio" class="btn-check" name="editEventColor" id="editColor4" value="#10B981">
                            <label class="btn" for="editColor4" style="width: 40px; height: 40px; background: #10B981; border-radius: 0.5rem; cursor: pointer; border: 2px solid var(--saas-border);"></label>

                            <input type="radio" class="btn-check" name="editEventColor" id="editColor5" value="#3B82F6">
                            <label class="btn" for="editColor5" style="width: 40px; height: 40px; background: #3B82F6; border-radius: 0.5rem; cursor: pointer; border: 2px solid var(--saas-border);"></label>

                            <input type="radio" class="btn-check" name="editEventColor" id="editColor6" value="#EF4444">
                            <label class="btn" for="editColor6" style="width: 40px; height: 40px; background: #EF4444; border-radius: 0.5rem; cursor: pointer; border: 2px solid var(--saas-border);"></label>

                            <input type="radio" class="btn-check" name="editEventColor" id="editColor7" value="#14B8A6">
                            <label class="btn" for="editColor7" style="width: 40px; height: 40px; background: #14B8A6; border-radius: 0.5rem; cursor: pointer; border: 2px solid var(--saas-border);"></label>

                            <input type="radio" class="btn-check" name="editEventColor" id="editColor8" value="#F97316">
                            <label class="btn" for="editColor8" style="width: 40px; height: 40px; background: #F97316; border-radius: 0.5rem; cursor: pointer; border: 2px solid var(--saas-border);"></label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="border-top: 1px solid var(--saas-border); justify-content: space-between;">
                    <button type="button" class="btn btn-danger" id="btnDeleteEvent" style="background: linear-gradient(135deg, #ef4444, #dc2626); border: none; color: white; padding: 0.625rem 1.25rem; border-radius: 0.75rem; font-weight: 600;">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16" class="d-inline-block">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Supprimer
                    </button>
                    <div>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="background: var(--saas-bg); border: 2px solid var(--saas-border); color: var(--saas-text); padding: 0.625rem 1.25rem; border-radius: 0.75rem; font-weight: 600; margin-right: 0.5rem;">Annuler</button>
                        <button type="submit" class="saas-btn saas-btn-primary">
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            Enregistrer
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
